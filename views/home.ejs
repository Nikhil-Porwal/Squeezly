<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <%- include("../Styling/home.ejs"); %>
    <title>URL Shortener | Squeez.ly</title>
  </head>
  <body>
    <div class="container">
      <header class="d-flex flex-wrap justify-content-between py-3 mb-4 border-bottom">
        <a href="/" class="d-flex align-items-center text-decoration-none">
          <span class="fs-2 text-success">Squeez.ly</span>
        </a>
        <ul class="nav nav-pills">
          <li class="nav-item"><a href="mailto:nik.porwal9340@gmail.com" class="nav-link active">Contact Me</a></li>
          <li class="nav-item"><a href="/about" class="nav-link" aria-current="page">About Us</a></li>
          
          <li class="nav-item"><a href="/login" class="nav-link">Logout</a></li>
        </ul>
      </header>
    </div>

    <div class="container">
      <div class="form-container">
        <h1>URL Shortener</h1>
        <form method="POST" action="/url">
          <label for="url">Enter Your Original URL</label>
          <input
            type="text"
            name="url"
            id="url"
            placeholder="https://example.com"
            required
          />
          <button type="submit">Generate</button>
        </form>
      </div>

      <div class="result">
        <% if (locals.id) { %>
        <p><strong>URL Generated:</strong> <a class="short-link" href="http://localhost:8001/url/<%= id %>">http://localhost:8001/url/<%= id %></a></p>
        <% } %>
      </div>

      <div class="table-container">
        <% if (locals.urls) { %>
        <table>
          <thead>
            <tr>
              <th>S. No</th>
              <th>ShortID</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td><a class="short-link" href="<%= url.redirectUrl %>"><%= url.redirectUrl %></a></td>
              <td><%= url.visited.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
